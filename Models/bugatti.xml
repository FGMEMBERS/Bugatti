<?xml version="1.0"?>

<PropertyList>

  <path>bugatti.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>interieur</object-name>
    <object-name>sortie</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletGB</object-name>
    <object-name>voletDB</object-name>
    <object-name>voletGH</object-name>
    <object-name>voletDH</object-name>
    <object-name>derive</object-name>
    <object-name>air</object-name>
    <object-name>direction</object-name>
    <object-name>profondeurG</object-name>
    <object-name>profondeurD</object-name>
    <object-name>axeGA</object-name>
    <object-name>axeGB</object-name>
    <object-name>roueG</object-name>
    <object-name>porteG1</object-name>
    <object-name>porteG2</object-name>
    <object-name>axeDA</object-name>
    <object-name>axeDB</object-name>
    <object-name>roueD</object-name>
    <object-name>porteD1</object-name>
    <object-name>porteD2</object-name>
    <object-name>pate</object-name>
    <object-name>bol1</object-name>
    <object-name>bol2</object-name>
    <object-name>helice1</object-name>
    <object-name>helice1</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
    <object-name>propdisc2</object-name>
    <object-name>propblur2</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
    <object-name>propdisc2</object-name>
    <object-name>propblur2</object-name>
  </animation>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Bugatti/Models/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.405 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.272 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model>

  <!-- L'hélice intérieur--> 
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc1</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur1</object-name>
    <condition>
      <and>
        <greater-than>
          <property>engines/engine[0]/rpm</property>
          <value>600.000</value>
        </greater-than>
        <less-than>
          <property>engines/engine[0]/rpm</property>
          <value>1500.001</value>
        </less-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice1</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>helice1</object-name>
    <object-name>bol1</object-name>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
     <x-m> -3.478 </x-m>
     <y-m>  0.000 </y-m>
     <z-m>  0.182 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

<!-- L'hélice droite--> 
<!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc2</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[1]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur2</object-name>
    <condition>
      <and>
        <greater-than>
          <property>engines/engine[1]/rpm</property>
          <value>600.000</value>
        </greater-than>
        <less-than>
          <property>engines/engine[1]/rpm</property>
          <value>1500.001</value>
        </less-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice2</object-name>
    <condition>
      <less-than>
        <property>engines/engine[1]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>helice2</object-name>
    <object-name>bol2</object-name>
    <object-name>propdisc2</object-name>
    <object-name>propblur2</object-name>
    <property>engines/engine[1]/rpm</property>
    <factor> 1 </factor>
    <center>
     <x-m> -3.663 </x-m>
     <y-m>  0.000 </y-m>
     <z-m>  0.182 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeurG</object-name>
    <property>controls/flight/elevator</property>
    <factor>-20</factor>
    <axis>
      <x1-m>  3.290 </x1-m>
      <y1-m> -0.121 </y1-m>
      <z1-m>  0.463 </z1-m>
      <x2-m>  3.290 </x2-m>
      <y2-m> -1.276 </y2-m>
      <z2-m>  1.040 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>profondeurD</object-name>
    <property>controls/flight/elevator</property>
    <factor>-20</factor>
    <axis>
      <x1-m>  3.290 </x1-m>
      <y1-m>  1.276 </y1-m>
      <z1-m>  1.040 </z1-m>
      <x2-m>  3.290 </x2-m>
      <y2-m>  0.121 </y2-m>
      <z2-m>  0.463 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>controls/flight/rudder</property>
    <factor>20</factor>
    <axis>
      <x1-m>  3.351 </x1-m>
      <y1-m>  0.000 </y1-m>
      <z1-m> -0.270 </z1-m>
      <x2-m>  3.265 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  0.265 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>profondeurG</object-name>
    <property>controls/flight/rudder</property>
    <factor>-15</factor>
    <axis>
      <x1-m>  3.290 </x1-m>
      <y1-m> -0.121 </y1-m>
      <z1-m>  0.463 </z1-m>
      <x2-m>  3.290 </x2-m>
      <y2-m> -1.276 </y2-m>
      <z2-m>  1.040 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>profondeurD</object-name>
    <property>controls/flight/rudder</property>
    <factor>15</factor>
    <axis>
      <x1-m>  3.290 </x1-m>
      <y1-m>  1.276 </y1-m>
      <z1-m>  1.040 </z1-m>
      <x2-m>  3.290 </x2-m>
      <y2-m>  0.121 </y2-m>
      <z2-m>  0.463 </z2-m>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>-15.0</factor>
    <axis>
      <x1-m> -0.063 </x1-m>
      <y1-m> -2.587 </y1-m>
      <z1-m>  0.068 </z1-m>
      <x2-m> -0.677 </x2-m>
      <y2-m> -3.942 </y2-m>
      <z2-m>  0.172 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>-15.0</factor>
    <axis>
      <x1-m> -0.677 </x1-m>
      <y1-m>  3.942 </y1-m>
      <z1-m>  0.172 </z1-m>
      <x2-m> -0.063 </x2-m>
      <y2-m>  2.587 </y2-m>
      <z2-m>  0.068 </z2-m>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletGB</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>-45.0</factor>
    <axis>
      <x1-m>  0.615 </x1-m>
      <y1-m> -1.034 </y1-m>
      <z1-m> -0.048 </z1-m>
      <x2-m>  0.068 </x2-m>
      <y2-m> -2.524 </y2-m>
      <z2-m>  0.100 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletDB</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>-45.0</factor>
    <axis>
      <x1-m>  0.068 </x1-m>
      <y1-m>  2.524 </y1-m>
      <z1-m>  0.100 </z1-m>
      <x2-m>  0.615 </x2-m>
      <y2-m>  1.034 </y2-m>
      <z2-m> -0.048 </z2-m>
    </axis>
  </animation>

  <!-- Rentrée des roues -->
  <animation>
    <type>rotate</type>
    <object-name>axeGA</object-name>
    <object-name>axeGB</object-name>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind> 0.70 </ind>
        <dep> 0.00 </dep>
      </entry>
      <entry>
        <ind>  0.00 </ind>
        <dep> 89.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -0.705 </x-m>
      <y-m> -1.487 </y-m>
      <z-m>  0.016 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>axeDA</object-name>
    <object-name>axeDB</object-name>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind> 0.70 </ind>
        <dep> 0.00 </dep>
      </entry>
      <entry>
        <ind>  0.00 </ind>
        <dep> 89.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -0.705 </x-m>
      <y-m>  1.487 </y-m>
      <z-m>  0.016 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>pate</object-name>
    <property>gear/gear[2]/position-norm</property>
    <interpolation>
      <entry>
        <ind>0.0</ind>
        <dep> 0.00</dep>
      </entry>
      <entry>
        <ind>1.0</ind>
        <dep> 0.0828</dep>
      </entry>
    </interpolation>
    <axis>
      <x>  0.00 </x>
      <y>  0.00 </y>
      <z> -1.00 </z>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <type>translate</type>
    <object-name>axeGB</object-name>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.300 </dep>
      </entry>
    </interpolation>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>axeDB</object-name>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.300 </dep>
      </entry>
    </interpolation>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>pate</object-name>
    <property>gear/gear[2]/compression-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.100 </dep>
      </entry>
    </interpolation>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -0.709 </x-m>
      <y-m> -1.487 </y-m>
      <z-m> -0.912 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -0.709 </x-m>
      <y-m>  1.487 </y-m>
      <z-m> -0.912 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Fermeture des portes des trains -->
  <animation>
    <type>rotate</type>
    <object-name>porteG1</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind> 0.70 </ind>
        <dep> 0.00 </dep>
      </entry>
      <entry>
        <ind>  0.00 </ind>
        <dep> 95.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -0.706 </x-m>
      <y-m> -1.553 </y-m>
      <z-m> -0.063 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porteG2</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  0.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind>  0.15 </ind>
        <dep> 95.00 </dep>
      </entry>
      <entry>
        <ind>  0.95 </ind>
        <dep> 95.00 </dep>
      </entry>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -0.754 </x-m>
      <y-m> -0.298 </y-m>
      <z-m> -0.205 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porteD1</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind> 0.70 </ind>
        <dep> 0.00 </dep>
      </entry>
      <entry>
        <ind>  0.00 </ind>
        <dep> 95.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -0.706 </x-m>
      <y-m>  1.553 </y-m>
      <z-m> -0.063 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porteD2</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  0.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind>  0.15 </ind>
        <dep> 95.00 </dep>
      </entry>
      <entry>
        <ind>  0.95 </ind>
        <dep> 95.00 </dep>
      </entry>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -0.754 </x-m>
      <y-m>  0.298 </y-m>
      <z-m> -0.205 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

</PropertyList>

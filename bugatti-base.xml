<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <author>Emmanuel BARANGER (3D/FMD), Pierre GEOFFROY (FDM)</author>
    <aircraft-version>0.2</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>1.0</fuel-fraction>

<!-- Volet et spoilers
     Position 0 : Position normal vol de croisière
     Position 1 : Position décollage et montée
     Position 2 : Position vol rapide
     Position 3 : Position vol en piqué, aérofreins
     Position 4 : Position basse vitesse, atterrissage
     Position 5 : Position roulage au sol
-->
    <spoiler>
      <setting> 0.00 </setting>
      <setting> 0.20 </setting>
      <setting> 0.40 </setting>
      <setting> 0.60 </setting>
      <setting> 0.80 </setting>
      <setting> 1.00 </setting>
    </spoiler>

    <flaps>
      <setting> 0.00 </setting>
      <setting> 0.20 </setting>
      <setting> 0.40 </setting>
      <setting> 0.60 </setting>
      <setting> 0.80 </setting>
      <setting> 1.00 </setting>
    </flaps>

    <sound>
      <path>Aircraft/Bugatti/Sounds/bugatti-sound.xml</path>
    </sound>

    <model>
      <path>Aircraft/Bugatti/Models/bugatti.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <startup>
     <splash-texture>Aircraft/Bugatti/bugatti-splash.png</splash-texture>
    </startup>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

    <help>
      <title>Bugatti Model 100P</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
    </help>

    <menubar include="Dialogs/bugatti-menu.xml"/>

  </sim>

  <input>
    <keyboard include="Nasal/bugatti-keyboard.xml"/>
  </input>

  <nasal>
    <doors>
      <file>Aircraft/Bugatti/Nasal/doors.nas</file>
    </doors>
    <bugatti>
      <file>Aircraft/Bugatti/Nasal/light.nas</file>
      <file>Aircraft/Bugatti/Nasal/liveries.nas</file>
    </bugatti>
  </nasal>

</PropertyList>

